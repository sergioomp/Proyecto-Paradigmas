@model List<AgenteIA.Models.ChatMessage>


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat</title>
    <link rel="stylesheet" href="@Url.Content("~/css/chat.css")" asp-append-version="true" />
</head>
<body class="chat-body">
    <div class="chat-container">
        <header class="chat-header">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <strong>Chatea con tu asistente inteligente</strong>
            </a>
        </header>

        <ul id="chatBox" class="chat-list">
            @if (Model != null && Model.Any())
            {
                foreach (var msg in Model)
                {
                    @Html.Partial("~/Views/Chat/_ChatEntry.cshtml", msg)
                }
            }
        </ul>

        <form id="chatForm" class="chat-input-area" method="post">
            <textarea name="UserInput" placeholder="Escribe tu mensaje..." class="chat-textarea"></textarea>
            <button type="submit" class="chat-send-btn">Enviar</button>
        </form>
    </div>

    <script src="@Url.Content("~/js/chat.js")"></script>
</body>
</html>