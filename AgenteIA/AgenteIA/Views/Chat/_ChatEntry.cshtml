@section Styles {
    <link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />
}
@model AgenteIA.Models.ChatMessage

<li class="chat-entry">
    <ul>
        <li class="d-flex justify-content-between mb-4">
            <div class="card w-100">
                <div class="card-body">
                    <p class="mb-0">@Model.UserInput</p>
                </div>
            </div>
            <img src="https://cdn.pixabay.com/photo/2014/03/25/16/32/user-297330_1280.png" alt="avatar"
                 class="rounded-circle d-flex align-self-start ms-3 shadow-1-strong" width="60">
        </li>

        <li class="d-flex justify-content-between mb-4">
            <img src="https://cdn.pixabay.com/photo/2024/03/05/13/13/robot-8614567_1280.png" alt="avatar"
                 class="rounded-circle d-flex align-self-start me-3 shadow-1-strong" width="60">
            <div class="card w-100">
                <div class="card-body">
                    <p class="mb-0">@Model.Response</p>
                </div>
            </div>
        </li>
    </ul>
</li>
